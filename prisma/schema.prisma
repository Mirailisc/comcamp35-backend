generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  first_name  String?
  last_name   String?
  profile_url String?
  created_at  DateTime @default(now())
  files       File[]
}

model File {
  id         Int      @id @default(autoincrement())
  url        String
  type       String
  user       User     @relation(fields: [userId], references: [id])
  userId     Int      
  created_at DateTime @default(now())
}
